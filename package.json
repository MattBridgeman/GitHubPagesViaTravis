{
  "name": "lentcoding",
  "version": "1.0.0",
  "description": "LentCoding is a challenge to add a new code project for the 40 days of lent.",
  "main": "index.js",
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "clean": "rimraf build",
    "lint": "eslint src test",
    "test": "mocha --compilers js:babel-register --recursive",
    "test:watch": "npm test -- --watch",
    "check:src": "npm run lint && npm run test",
    "build:js": "browserify src/**/js/main.js -o build/**/js/bundle.js -t [ babelify --presets [ es2015 react ] ]",
    "build:html": "copyfiles -u 1 'src/**/*.html' build",
    "build:css": "copyfiles -u 1 'src/**/*.css' build",
    "build": "npm run build:html && npm run build:css && npm run build:js"
  },
  "devDependencies": {
    "@alrra/travis-scripts": "^2.0.0",
    "babel-cli": "^6.3.15",
    "babel-core": "^6.3.15",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "copyfiles": "^0.2.1",
    "eslint": "^1.10.3",
    "expect": "^1.8.0",
    "mocha": "^2.2.5",
    "rimraf": "^2.3.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MattBridgeman/LentCoding.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MattBridgeman/LentCoding/issues"
  },
  "homepage": "https://github.com/MattBridgeman/LentCoding#readme"
}
